extends ../../layouts/layout_main.pug
block container
  .page-title
    .title_right
  .clearfix
  .row
    .col-md-12
      .x_panel
        .x_title
          h2 Información del compromiso
          ul.nav.navbar-right.panel_toolbox
          .clearfix
        .x_content
          form#frmregisterCommit.form-horizontal(action='/secure/register',method='post',enctype='multipart/form-data')
            
            each config in commitmentconfig
              case config.t_commitment_config_id
                when 'CM09'
                  .form-group
                    label.control-label.col-md-3.col-sm-6.col-xs-12(for=config.t_commitment_config_id,style='cursor: pointer') 
                      | #{config.name}
                    .col-md-6.col-sm-6.col-xs-12
                      textarea.form-control.col-md-7.col-xs-6(id=config.t_commitment_config_id, placeholder=config.name, type='text', name=config.columnasoc)

                when 'CM10'
                  .form-group
                    label.control-label.col-md-3.col-sm-6.col-xs-12(for=config.t_commitment_config_id,style='cursor: pointer') 
                      | #{config.name}
                    .col-md-6.col-sm-6.col-xs-12
                      textarea.form-control.col-md-7.col-xs-6(id=config.t_commitment_config_id, placeholder=config.name, type='text', name=config.columnasoc)

                when 'CM11'
                  .form-group
                    label.control-label.col-md-3.col-sm-6.col-xs-12(for=config.t_commitment_config_id,style='cursor: pointer') 
                      | #{config.name}
                    .col-md-6.col-sm-6.col-xs-12
                      textarea.form-control.col-md-7.col-xs-6(id=config.t_commitment_config_id, placeholder=config.name, type='text', name=config.columnasoc)

                when 'CM12'
                  .form-group
                    label.control-label.col-md-3.col-sm-3.col-xs-12(for=config.id)
                      | Temporalidad:
                    .col-sm-2 
                      select#temporalidad.form-control(name=config.columnasoc)
                        option(value='None') Seleccionar..
                        option(value='Puntual') Puntual
                        option(value='Permanente') Permanente

                when 'CM13'
                  .form-group
                    label.control-label.col-md-3.col-sm-3.col-xs-12(for=config.id)
                      | Fecha de Inicio:
                    .col-sm-2 
                      .form-group
                        #fechainicio.input-group.date
                          input.form-control(type='text', name=config.columnasoc)
                          span.input-group-addon
                            span.glyphicon.glyphicon-calendar 

                when 'CM14'
                  .form-group
                    label.control-label.col-md-3.col-sm-3.col-xs-12(for=config.id)
                      | Frecuencia 
                      span.required *
                    .col-sm-2
                      select#frecuencia.form-control(name=config.columnasoc)
                        option(value='None') Seleccionar..
                        option(value='Unica') Unica
                        option(value='Diaria') Diaria
                        option(value='Semanal') Semanal
                        option(value='Mensual') Mensual
                        option(value='Trimestral') Trimestral
                        option(value='Semestral') Semestral
                        option(value='Anual') Anual
                        option(value='Continuo') Continuo
                        option(value='Indefinido') Indefinido 

                when 'CM15'
                  .form-group
                    label.control-label.col-md-3.col-sm-3.col-xs-12(for=config.id)
                      | Criticidad 
                      span.required *
                    .col-sm-2
                      select#criticidad.form-control(name=config.columnasoc)
                        option(value='None') Seleccionar..
                        option(value='Alto') Alto
                        option(value='Medio') Medio
                        option(value='Bajo') Bajo
                when 'CM16'
                  .form-group
                    label.control-label.col-md-3.col-sm-3.col-xs-12(for=config.id)
                      | Tipo de evidencia 
                      span.required *
                    .col-sm-2
                      select#tipoevidencia.form-control(name=config.columnasoc)
                        option(value='None') Seleccionar..
                        option(value='Manual') Manual
                        option(value='Fisica') Física

                when 'CM17'
                  .form-group
                    label.control-label.col-md-3.col-sm-3.col-xs-12(for=config.id)
                      | Evidencias de cumplimiento 
                      span.required *
                    .col-md-6.col-sm-6.col-xs-12
                      input#template.inputfile.inputfile-6(type='file',name='evidencias',data-multiple-caption='{count} archivos seleccionados',multiple)
                      label(for='template',width='100%')
                        span
                        strong
                          i.fa.fa-upload
                          |  Seleccionar

                when 'CM18'
                  .form-group
                    label.control-label.col-md-3.col-sm-3.col-xs-12(for=config.id)
                      | Estado del compromiso 
                      span.required *
                    .col-sm-2
                      select#estadocommit.form-control(name=config.columnasoc)
                        option(value='None') Seleccionar..
                        option(value='Abierto') Abierto
                        option(value='Cerrado') Cerrado
                        option(value='proceso') En proceso
                        option(value='Cancelado') Cancelado                        
                        option(value='Diferido') Diferido
                        option(value='Vencido') Vencido   

                when 'CM19'
                  .form-group
                    label.control-label.col-md-3.col-sm-3.col-xs-12(for=config.id)
                      | Acción sobre el compromiso 
                      span.required *
                    .col-sm-2
                      select#accioncompromiso.form-control(name=config.columnasoc)
                        option(value='None') Seleccionar..
                        option(value='Si') Si
                        option(value='No') No

                when 'CM21'
                  .form-group
                    label.control-label.col-md-3.col-sm-3.col-xs-12(for=config.id)
                      | Frecuencia propuesta de verificación 
                      span.required *
                    .col-sm-2
                      select#frecuenciaverif.form-control(name=config.columnasoc)
                        option(value='None') Seleccionar..
                        option(value='Unica') Unica
                        option(value='Diaria') Diaria
                        option(value='Semanal') Semanal
                        option(value='Mensual') Mensual
                        option(value='Trimestral') Trimestral
                        option(value='Semestral') Semestral
                        option(value='Anual') Anual
                        option(value='Continuo') Continuo
                        option(value='Indefinido') Indefinido
                when 'CM23'
                  .form-group
                    label.control-label.col-md-3.col-sm-6.col-xs-12(for=config.t_commitment_config_id, style='cursor: pointer') 
                      | #{config.name}
                    .col-md-6.col-sm-6.col-xs-12
                      input.form-control.col-md-7.col-xs-6(id=config.t_commitment_config_id, placeholder='example@gmail.com,hotmail@outlook.com', type='email', name=config.columnasoc, multiple)
                when 'CM26'
                  .form-group
                    label.control-label.col-md-3.col-sm-3.col-xs-12(for=config.id)
                      | Fecha de verificación:
                    .col-sm-2 
                      .form-group
                        #fechaverif.input-group.date
                          input.form-control(type='text', name=config.columnasoc)
                          span.input-group-addon
                            span.glyphicon.glyphicon-calendar 

                when 'CM29'
                  .form-group
                    label.control-label.col-md-3.col-sm-6.col-xs-12(for=config.t_commitment_config_id,style='cursor: pointer') 
                      | #{config.name}
                    .col-md-6.col-sm-6.col-xs-12
                      textarea.form-control.col-md-7.col-xs-6(id=config.t_commitment_config_id, placeholder=config.name, type='text', name=config.columnasoc)

                when 'CM30'
                  .form-group
                  tr
                  td
                    label.control-label.col-md-3.col-sm-6.col-xs-12(for=config.id,style='cursor: pointer')  #{config.name}
                  td
                    input.flat(id=config.id,type='checkbox', value=config.id, name=config.columnasoc)
                  .row
                when 'CM31'
                  .form-group
                  tr
                  td
                    label.control-label.col-md-3.col-sm-6.col-xs-12(for=config.id,style='cursor: pointer')  #{config.name}
                  td
                    input.flat(id=config.id,type='checkbox', value=config.id, name=config.columnasoc)
                  .row
                when 'CM32'
                  .form-group
                  tr
                  td
                    label.control-label.col-md-3.col-sm-6.col-xs-12(for=config.id,style='cursor: pointer')  #{config.name}
                  td
                    input.flat(id=config.id,type='checkbox', value=config.id, name=config.columnasoc)
                  .row
                when 'CM33'
                  .form-group
                  tr
                  td
                    label.control-label.col-md-3.col-sm-6.col-xs-12(for=config.id,style='cursor: pointer')  #{config.name}
                  td
                    input.flat(id=config.id,type='checkbox', value=config.id, name=config.columnasoc)
                  .row
                default
                  .form-group
                    label.control-label.col-md-3.col-sm-6.col-xs-12(for=config.t_commitment_config_id,style='cursor: pointer') 
                      | #{config.name}
                    .col-md-6.col-sm-6.col-xs-12
                      input.form-control.col-md-7.col-xs-6(id=config.t_commitment_config_id, placeholder=config.name, type='text', name=config.columnasoc) 
            .ln_solid
            .form-group
              a.btn.btn-default.btn-sm(href='/secure/listall') Cancelar
              button.btn.btn-success.btn-sm.pull-right(type='submit') Registrar compromiso
  script(src='/jquery/dist/jquery.min.js')
  script(src='/moment/min/moment.min.js')
  script(src='../bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js')
  script.
    $('#fechainicio').datetimepicker({
      defaultDate: new Date(),
      format: 'DD/MM/YYYY'
      
      });
    $('#fechaverif').datetimepicker({
      defaultDate: new Date(),
      format: 'DD/MM/YYYY'
     });
    
