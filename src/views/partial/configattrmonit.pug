      .x_panel
        .x_title
          h2 Etapas
          .clearfix
        .x_content
            table#datatable.table.dt-responsive.nowrap(cellspacing='0', width='60%')
              tr
                td(width='10%')
                  label(for='contruccion') Contrucción
                td(width='10%')
                  input#contruccion.flat(type='checkbox', value='MN20', name='etapasmonitoreo')
